<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:media="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <!-- Base colors -->
    <Color x:Key="OpenHABLightOrange">#FFFF5722</Color>
    <Color x:Key="OpenHABLightGrey">#EEEEEE</Color>
    <Color x:Key="DarkColor">#344040</Color>
    <!-- Control base colors -->
    <SolidColorBrush x:Key="OpenHABLightOrangeBrush"
                     Color="{StaticResource OpenHABLightOrange}" />
    <SolidColorBrush x:Key="DefaultTextColor"
                     Color="{ThemeResource TextFillColorPrimaryBrush}" />
    <media:AcrylicBrush x:Key="ErrorNotificationBackground"
                        TintOpacity="0.5"
                        FallbackColor="Red"
                        TintColor="Red"
                        AlwaysUseFallback="False" />
    <media:AcrylicBrush x:Key="NotificationBackground"
                        TintOpacity="0.5"
                        FallbackColor="Silver"
                        TintColor="Silver"
                        AlwaysUseFallback="False" />
    <Style x:Key="OpenHABGroupHeader"
           BasedOn="{StaticResource SubtitleTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="Foreground"
                Value="{StaticResource OpenHABLightOrangeBrush}" />
    </Style>
    <Style x:Key="HeaderText"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="24" />
    </Style>
    <Style x:Key="MenuSubHeader"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="21" />
    </Style>
    <Style x:Key="Widget"
           TargetType="Grid">
        <Setter Property="Width"
                Value="300" />
        <Setter Property="Height"
                Value="100" />
        <Setter Property="Background"
                Value="{ThemeResource ControlStrokeColorOnAccentDefaultBrush }" />
    </Style>
    <Style x:Key="WidgetGroup"
           TargetType="StackPanel">
        <Setter Property="Background"
                Value="{ThemeResource CardStrokeColorDefaultBrush}" />
    </Style>
    <Style x:Key="ContentDialog"
           TargetType="ContentDialog">
        <Setter Property="Background"
                Value="{ThemeResource ControlStrokeColorOnAccentDefaultBrush}" />
    </Style>
    <!-- Text Styles -->
    <Style x:Key="TitleStyle"
           BasedOn="{StaticResource TitleTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="Foreground"
                Value="{ThemeResource TextFillColorPrimaryBrush}" />
    </Style>
</ResourceDictionary>
